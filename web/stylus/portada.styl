@import 'nib'
@import 'normalize' 
@import 'fuentes'
@import 'sprites'

box-sizing()
	-webkit-box-sizing arguments
	-moz-box-sizing arguments
	box-sizing arguments
	
opacity(n)
	opacity n
	if support-for-ie
		filter unquote('progid:DXImageTransform.Microsoft.Alpha(Opacity=' + round(n * 100) + ')')

color_azul = #0b59a2
color_azul_fuerte = #00488c
color_gris_claro = #e6e6e6
color_gris = gray

a
	text-decoration none
	
body
	color white
	font-family 'Conv_FRABK'
	font-size 16px
	background color_azul_fuerte 

footer
	background color_azul_fuerte
	color white
	overflow hidden
	text-align center
	padding-top 30px
	& .contenidos
		height 200px
	& .contenidos figure
	& .contenidos .contenido
	& .contenidos .redes-sociales
		display inline-block
		vertical-align middle
	& .contenidos figure
		margin 0px 40px 0px 0px 
		width 103px
	& .contenidos .contenido
		width 700px
	& .contenidos .redes-sociales
		width 120px
		
#logo
	margin 100px auto 50px
	height 270px
	width 329px
	& img
		width 100%
		height 100%

.container
	margin 0 auto
	width 100%
	overflow hidden
	& > .header
		padding 1em 1.35em

.principal
	color white
	text-align center


.navegador
	width 800px
	margin 0 auto
	background color_gris_claro
	margin-bottom 2em
	& ul
		margin 0
		padding 0
		list-style none
	& li
		display inline-block
		vertical-align top
		padding 1em 0
		& > a
			padding 0 .5em
			border-left 1px solid color_gris
			color black
			display block
			transition all .5s ease-out
			text-transform uppercase
			&:hover
				color color_azul
		&:first-child > a
			border-left none


.redes-sociales span
	display inline-block
	vertical-align top
	margin-left .2em

// clases OOCSS

.fondo-azul
	background color_azul

