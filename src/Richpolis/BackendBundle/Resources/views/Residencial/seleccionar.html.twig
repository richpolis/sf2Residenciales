{% extends 'FrontendBundle::layout.html.twig' %}

{% block title %}Seleccionar residencial{% endblock %}

{% block stylesheets %}
    {{ parent() }}
<link rel="stylesheet" href="{{asset('css/main.css')}}">
{% endblock %} 

{% block body %}
    <!-- Form area -->
    <div class="admin-form">
        <div class="container">
            <div class="text-center">
                <a href="{{path('homepage')}}">
                    <img src="{{ asset('images/logo.png') }}" style="max-height: 120px;"/>
                </a>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <!-- Widget starts -->
                    <div class="widget">
                        <!-- Widget head -->
                        <div class="widget-head">
                            <i class="icon-lock"></i> Seleccionar Residencial
                        </div>
                        <div class="widget-content">
                            {% if is_granted('ROLE_ADMIN') %}
                                <ul>
                                    {% for residencial in entities %}
                                        <li>
                                            <a href="{{path('homepage',{'residencial':residencial.id})}}">
                                                <span class="bold">{{ residencial.nombre }}</span>
                                            </a>
                                        </li>
                                    {% endfor %}    
                                </ul>
                            {% else %}
                                <a href="{{path('homepage')}}" class="navbar-brand">
                                    Dashboard | <span class="bold">{{ app.user.edificio.residencial }}</span>
                                </a>   
                            {% endif %}
                        </div>
                        <div class="widget-foot">
                            <br/>
                        </div>
                    </div>  
                </div>
            </div>
        </div> 
    </div>
<footer class="footer">
    <div class="container">
    <!--img src="{{asset('images/interactivevalley.png')}}"/-->
    <p class="text-center">Mosaico Real Estate Management | Los Cormoran 102, Lomas de las Águilas, Álvaro Obregón C.P. 01730, México DF |  63 78 99 05</p>
    </div>
</footer>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function(){
           $("body").css({'paddingTop':'30px'});
           $("footer").css({'position':'fixed','bottom':'0px','width':'100%'});
           $(".admin-form").css({'margin':'0px auto'});
        });
    </script>
{% endblock %}   