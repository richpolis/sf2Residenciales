{% extends 'FrontendBundle::layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <!-- Main stylesheet -->
    <link rel="stylesheet" href="{{asset('css/style.css')}}">
    <!-- Widgets stylesheet -->
    <link rel="stylesheet" href="{{asset('css/widgets.css')}}">   
    <!-- Gritter Notifications stylesheet -->
    <link rel="stylesheet" href="{{asset('css/jquery.gritter.css')}}"> 
    <link rel="stylesheet" href="{{asset('css/main.css')}}"> 
{% endblock %}

{% block mainbar %}
    <!-- Main bar -->
    <div class="mainbar">

        <!-- Page heading -->
        <div class="page-head">
            <h2 class="pull-left">Tickets</h2>
            <div class="clearfix"></div>
            <!-- Breadcrumb -->
            <div class="bread-crumb">
                <a href="{{path('homepage')}}"><i class="fa fa-home"></i>Dashboard</a> 
                <!--Divider-->
                <span class="divider">/</span>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                <a href="{{ path('residenciales')}}" class="bread-current">{{entity.residencial}}</a>
                {% else %}
                <a href="#" class="bread-current">{{entity.residencial}}</a>    
                {% endif %}
                <!--Divider-->
                <span class="divider">/</span> 
                <a href="{{path('tickets')}}" class="bread-current">Tickets</a>
                <!--Divider-->
                <span class="divider">/</span> 
                <a href="{{path('tickets_show',{'id':entity.id})}}" class="bread-current">Ticket: {{entity.titulo}} </a>
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{path('tickets_select_usuario')}}" class="btn btn-info pull-right" style="color: white; margin-left: 5px;">Crear ticket</a>
                {% endif %}
            </div>

            <div class="clearfix"></div>

        </div>
        <!-- Page heading ends -->

        <!-- Matter -->

        <div class="matter">
            <div class="container" id="contenidoPagina">
                <div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="widget">
                                <div class="widget-head">
                                    <div class="pull-left">Ticket:  {{ entity.titulo }}</div>
                                    <div class="clearfix"></div>
                                </div>

                                <div class="widget-content">
                                    <div class="padd contenido-formulario">    <table class="record_properties">
                                            <tbody>
                                                <tr>
                                                    <th>Id</th>
                                                    <td>{{ entity.id }}</td>
                                                </tr>
                                                <tr>
                                                    <th>Residencial</th>
                                                    <td>{{ entity.residencial }}</td>
                                                </tr>
                                                <tr>
                                                    <th>Torre</th>
                                                    <td>
                                                        <ul>
                                                            {% for edificio in entity.edificios %}
                                                                <li>
                                                                    {{ edificio }}
                                                                </li>
                                                            {% endfor %}
                                                        </ul>  
                                                    </td>
                                                </tr>
                                                <tr>                                                              <tr>
                                                    <th>Creado</th>
                                                    <td>{{ entity.usuario}}</td>
                                                </tr>
                                                <tr>
                                                    <th>Fecha creacion</th>
                                                    <td>{{ entity.createdAt|date('d-m-Y')}}</td>
                                                </tr>
                                                <tr>
                                                    <th>Titulo</th>
                                                    <td>{{ entity.titulo }}</td>
                                                </tr>
                                                <tr>
                                                    <th>Post</th>
                                                    <td>{{ entity.comentario | raw }}</td>
                                                </tr>
                                                <tr>
                                                    <th>Cerrado?</th>
                                                    <td>{{ entity.isCerrado | isActive | raw }}</td>
                                                </tr>
                                            </tbody>
                                        </table>   
                                    </div>
                                </div>
                                <div class="widget-foot">
                                    <button id="botonRegresar" class="btn btn-default" onclick="javascript:regresar('{{path('tickets')}}')">Regresar</button>
                                    <button id="botonEditar" class="btn btn-info" onclick="javascript:editarRegistro('{{path('tickets_edit',{id: entity.id})}}')">Editar</button>   
                                    <div style="float: left; margin-right: 3px;">
                                        <form id="formEliminar" action="{{ path('tickets_delete', { 'id': entity.id }) }}" method="post">
                                            <input name="_method" value="DELETE" type="hidden"/>
                                            {{ form_widget(delete_form) }}
                                        </form>
                                        <button class="btn btn-danger " onclick="eliminarRegistro();">Eliminar</button>
                                    </div>        
                                </div>
                            </div>  
                        </div>    
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <!-- Widget content -->
                            <div class="widget">
                                <div class="widget-content">
                                    <div class="slimScrollDiv" style="position: relative; overflow: hidden; width: auto; height: 450px;">
                                        <div class="padd sscroll" style="overflow: hidden; width: auto; height: 450px;">
                                        <ul class="chats">
                                            {% for comentario in entity.comentarios %}
                                                {% if comentario.usuario.id == app.user.id %}
                                                    {% set tipoUser = 'by-me' %}
                                                    {% set tipoPull = 'pull-left' %}
                                                {% else %}
                                                    {% set tipoUser = 'by-other' %}
                                                    {% set tipoPull = 'pull-right' %}
                                                {% endif %}    
                                                <!-- Chat by us. Use the class "by-me". -->
                                                <li class="{{tipoUser}}">
                                                    <!-- Use the class "{{tipoPull}}" in avatar -->
                                                    <div class="avatar {{tipoPull}}">
                                                        <img src="/images/logo.png" style="height: 40px;" alt="">
                                                    </div>
                                                    <div class="chat-content">
                                                        <!-- In meta area, first include "name" and then "time" -->
                                                        <!-- In meta area, first include "name" and then "time" -->
                                                    <div class="chat-meta"> {{comentario.usuario.nombre}} <span class="pull-right">{{comentario.fechaTwitter}}</span></div>
                                                        {{comentario.comentario | raw }}
                                                        <div class="clearfix"></div>
                                                    </div>
                                                </li> 
                                            {% endfor %}
                                        </ul>
                                        </div>
                                        <div class="slimScrollBar" style="width: 7px; position: absolute; top: 17px; opacity: 0.3; display: none; border-radius: 0px; z-index: 99; right: 1px; height: 105.218855218855px; background: rgb(0, 0, 0);"></div>
                                        <div class="slimScrollRail" style="width: 7px; height: 100%; position: absolute; top: 0px; display: none; border-radius: 0px; opacity: 0.2; z-index: 90; right: 1px; background: rgb(51, 51, 51);"></div>
                                    </div>
                                </div>
                                <div class="widget-foot">
                                    {% if entity.isCerrado == false %}
                                    <form action="{{ path('tickets_ticket',{'id': entity.id}) }}" class="validate form-inline" id="formComentarios" method="post" {{ form_enctype(form)}}  role="form">
                                        {{form_errors(form)}}
                                        <div class="form-group col-lg-10">
                                            {{form_widget(form.comentario)}}
                                        </div>
                                        {{form_rest(form)}}
                                        <input class="btn btn-success" type="submit" value="Enviar"/>
                                    </form>
                                    {% else %}
                                        <br/>
                                    {% endif %}    
                                </div>
                            </div>
                            <!-- Widget ends -->

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Matter ends -->

    </div>

    <!-- Mainbar ends -->        
    <div class="clearfix"></div>

{% endblock %}

{% block javascripts %}
  {{ parent() }}

<script src="{{asset('js/jquery-ui-1.9.2.custom.min.js')}}"></script> <!-- jQuery UI -->
<!-- jQuery Notification - Noty -->
<script src="{{asset('js/jquery.noty.js')}}"></script> <!-- jQuery Notify -->
<script src="{{asset('js/themes/default.js')}}"></script> <!-- jQuery Notify -->
<script src="{{asset('js/layouts/bottom.js')}}"></script> <!-- jQuery Notify -->
<script src="{{asset('js/layouts/topRight.js')}}"></script> <!-- jQuery Notify -->
<script src="{{asset('js/layouts/top.js')}}"></script> <!-- jQuery Notify -->
<!-- jQuery Notification ends -->

<script src="{{asset('js/datatables/js/jquery.dataTables.js')}}"></script>

<script src="{{asset('js/jquery.slimscroll.min.js')}}"></script> <!-- jQuery SlimScroll -->
<script src="{{asset('js/bootbox.min.js')}}"></script> <!-- Filter for support page -->
<script src="{{asset('js/custom.js')}}"></script> <!-- Custom codes -->


<script>
var regresar = function(url){
    location.href=url;
};

var editarRegistro = function(url){
    location.href=url;
};
    
var eliminarRegistro = function(){
  {% if is_granted('ROLE_ADMIN') %}
    bootbox.confirm("Esta seguro de eliminar el registro?", function(result) {
      if(result){
         $("#formEliminar").submit();
      }
    });
  {% else %}
    noty({text: 'No tienes los permisos suficientes para realizar esta accion',layout:'bottom', type:'warning', timeout:2000 });
  {% endif %}      
};

</script>
<script type="text/javascript">
    var $boton;
    $(document).ready(function(){
        $(".boton-para-responder ").on("click",function(){
            $boton = $(this);
            var $controles = $boton.parent();
            var idComentario = $boton.data('comentario');
            var $formulario = $("<form>");
            var $divComentarioFormulario = $("<div>");
            var $formComentarios = $("#formComentarios");
            $formulario.attr('action',$formComentarios.attr('action'));
            $formulario.attr('method','post');
            $formulario.html($formComentarios.html());
            $divComentarioFormulario.attr('id','formulario-comentario-'+idComentario);
            $divComentarioFormulario.addClass('formulario-comentario');
            $divComentarioFormulario.append($formulario);
            $controles.after($divComentarioFormulario)
            $formulario.find(".closeForm").fadeIn();
            $formulario.find("#richpolis_frontendbundle_comentario_parent").val(idComentario);
            $boton.fadeOut();
        });
    });
    function closeForm(){
       $(".formulario-comentario").remove();
       $boton.fadeIn();
    }
</script>
    
{% endblock %}

