{% extends 'FrontendBundle::layout.html.twig' %}

{% block title %}Administrador - Login{% endblock %}

{% block stylesheets %}
    {{ parent() }}
<link rel="stylesheet" href="{{asset('css/main.css')}}">
{% endblock %}    

{% block body %}   
    <!-- Form area -->
    <div class="admin-form">
        <div class="container">
            <div class="text-center">
                <a href="{{path('homepage')}}">
                    <img src="{{ asset('images/logo.png') }}" style="max-height: 120px;"/>
                </a>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <!-- Widget starts -->
                    <div class="widget">
                        <!-- Widget head -->
                        <div class="widget-head">
                            <i class="icon-lock"></i> Login 
                        </div>
                        <div class="widget-content">
                            <div class="padd contenido-formulario">
                                <!-- Login form -->
                                <form class="form-horizontal" action='{{ path(ruta) }}'  method="post">
                                    <!-- Email -->
                                    <div class="form-group">
                                        <label class="control-label col-lg-3" for="username">Email</label>
                                        <div class="col-lg-9">
                                            <input type="email" id="username" name="_username" value="{{ last_username }}" placeholder="Email">
                                        </div>
                                    </div>
                                    <!-- Password -->
                                    <div class="form-group">
                                        <label class="control-label col-lg-3" for="password">Contraseña</label>
                                        <div class="col-lg-9">
                                            <input type="password" id="password" name="_password" placeholder="Password">
                                        </div>
                                    </div>
                                    <!-- Remember me checkbox and sign in button -->
                                    <div class="form-group">
                                        <div class="col-lg-9 col-lg-offset-3">
                                            <div class="checkbox">
                                                <label>
                                                    <input type="checkbox" id="remember_me" name="_remember_me" checked > Recuerdame
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-9 col-lg-offset-3">
                                        <button type="submit" class="btn btn-danger">Entrar</button>
                                        <button type="reset" class="btn btn-default">Limpiar</button>
                                    </div>
                                    <br />
                                </form>

                            </div>
                        </div>

                        <div class="widget-foot">
                            <!--No esta registrado? <a href="#">Registrarse aquí</a><br/>-->
                            Recuperar constraseña <a href="{{path('recuperar')}}">Recuperar aquí</a><br/>
                            {% if error %}
                                {% if error %} 
                                        <div id='error' class='error' style="color: red;">{{ error.message | trans}}</div> 
                                {% endif %} 
                            {% else %}
                                <br/>
                            {% endif %}
                            {% for flashMessage in app.session.flashbag.get('notice') %}
                                <div class="flash-notice" style="color: #006699;">
                                    {{ flashMessage }}
                                </div>
                            {% endfor %}
                        </div>
                    </div>  
                </div>
            </div>
        </div> 
    </div>
<footer class="footer">
    <div class="container">
    <!--img src="{{asset('images/interactivevalley.png')}}"/-->
    <p class="text-center">Mosaico Real Estate Management | Los Cormoran 102, Lomas de las Águilas, Álvaro Obregón C.P. 01730, México DF |  63 78 99 05</p>
    </div>
</footer>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function(){
           $("body").css({'paddingTop':'30px'});
           $("footer").css({'position':'fixed','bottom':'0px','width':'100%'});
           $(".admin-form").css({'margin':'0px auto'});
        });
    </script>
{% endblock %}    
