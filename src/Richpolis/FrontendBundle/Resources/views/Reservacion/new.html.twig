{% extends 'FrontendBundle::layout.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
    <!-- Main stylesheet -->
    <link rel="stylesheet" href="{{asset('css/style.css')}}">
    <!-- Widgets stylesheet -->
    <link rel="stylesheet" href="{{asset('css/widgets.css')}}">   
    <!-- Gritter Notifications stylesheet -->
    <link rel="stylesheet" href="{{asset('css/jquery.gritter.css')}}">
    <!-- jQuery Validation Engine stylesheet -->
    <link rel="stylesheet" href="{{asset('css/validationEngine.jquery.css')}}">
{% endblock %}

{% block mainbar %}
    <!-- Main bar -->
    <div class="mainbar">

        <!-- Page heading -->
        <div class="page-head">
            <h2 class="pull-left">Reservaciones</h2>
            <div class="clearfix"></div>
            <!-- Breadcrumb -->
            <div class="bread-crumb">
                <a href="{{path('homepage')}}"><i class="fa fa-home"></i>Dashboard</a> 
                <!--Divider-->
                <span class="divider">/</span>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                <a href="{{ path('residenciales')}}" class="bread-current">{{edificio.residencial}}</a>
                {% else %}
                <a href="#" class="bread-current">{{edificio.residencial}}</a>    
                {% endif %}
                <!--Divider-->
                <span class="divider">/</span> 
                <a href="{{path('edificios')}}" class="bread-current">{{edificio}}</a>
                <!--Divider-->
                <span class="divider">/</span> 
                <a href="{{path('reservaciones')}}" class="bread-current">Reservaciones</a>
                <!--Divider-->
                <span class="divider">/</span> 
                <a href="{{path('reservaciones_select_edificio')}}" class="bread-current">Nueva reservacion</a>
            </div>
            <div class="clearfix"></div>
        </div>
        <!-- Page heading ends -->

        <!-- Matter -->
        <div class="matter">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="widget">

                            <div class="widget-head">
                                <div class="pull-left">Nueva reservacion:  {{ entity.stringReservacion }}</div>
                                <div class="clearfix"></div>
                            </div>

                            <div class="widget-content">
                                <div class="padd contenido-formulario">
                                    <!-- Form starts.  -->
                                    {{ form(form) }}
                                </div>
                            </div>
                            <div class="widget-foot">
                                <button id="botonRegresar" class="btn btn-default">Regresar</button>
                                <button id="botonGuardar" class="btn btn-primary">Crear reservacion</button>

                            </div>
                        </div>  

                    </div>
                </div>
            </div>
        </div>
        <!-- Matter ends -->
    </div>
    <!-- Mainbar ends -->           
    <div class="clearfix"></div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{asset('js/jquery-ui-1.9.2.custom.min.js')}}"></script> <!-- jQuery UI -->
    <script src="{{asset('js/jquery-ui-timepicker-addon.js')}}"></script>
	
    <!-- jQuery Notification - Noty -->
    <script src="{{asset('js/jquery.noty.js')}}"></script> <!-- jQuery Notify -->
    <script src="{{asset('js/themes/default.js')}}"></script> <!-- jQuery Notify -->
    <script src="{{asset('js/layouts/bottom.js')}}"></script> <!-- jQuery Notify -->
    <script src="{{asset('js/layouts/topRight.js')}}"></script> <!-- jQuery Notify -->
    <script src="{{asset('js/layouts/top.js')}}"></script> <!-- jQuery Notify -->
    <!-- jQuery Notification ends -->
    <script src="{{asset('js/jquery.slimscroll.min.js')}}"></script> <!-- jQuery SlimScroll -->
    <script src="{{asset('js/languages/jquery.validationEngine-es.js')}}"></script> <!-- jQuery Validation Engine Language File -->
    <script src="{{asset('js/jquery.validationEngine.js')}}"></script> <!-- jQuery Validation Engine -->
    <script src="{{asset('js/jquery.slimscroll.min.js')}}"></script> <!-- jQuery SlimScroll -->
    <script src="{{asset('js/filter.js')}}"></script> <!-- Filter for support page -->
    <script src="{{asset('js/custom.js')}}"></script> <!-- Custom codes -->

    <script>
        $(document).ready(function () {
            $(".validate").validationEngine();

            $("#botonRegresar").on("click", function () {
                location.href = "{{path('reservaciones')}}";
            });

            $("#botonGuardar").on("click", function () {
                $(".contenido-formulario form").submit();
            });
			
			$("#richpolis_frontendbundle_reservacion_fechaEvento").datepicker({
                dateFormat: "yy-mm-dd",
                {% if is_granted('ROLE_SUPER_ADMIN') == false %}    
                minDate: 0,       
                maxDate: "+3M"
                {% endif %}
            });
            
            $('#richpolis_frontendbundle_reservacion_desde').timepicker({
                    timeFormat: 'HH:mm',
                    stepHour: 1,
                    stepMinute: 15
            });
            
            $('#richpolis_frontendbundle_reservacion_hasta').timepicker({
                    timeFormat: 'HH:mm',
                    stepHour: 1,
                    stepMinute: 15
            });

        {% if errores | length > 0 %}
            {% for error in errores %}
                noty({
                    text: '{{ error }}',
                    layout: 'topRight',
                    type: 'error',
                    timeout: 2000
                });
            {% endfor %}    
        {% endif %}

          });

    </script>
{% endblock %}


