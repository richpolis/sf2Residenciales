{% extends '::base.html.twig' %}

{% block title %}H GRUPO EDITORIAL{% endblock %}

{% set urlAbsolutaFoto = 'http://'
                             ~ app.request.server.get('SERVER_NAME')
                             ~ asset('images/heraldologo.png') %}
{% block stylesheets %}
    
	{% block redes_sociales %}
		<meta property="og:url" content="{{url('homepage')}}" />
		<meta property="og:title" content="H Grupo Editorial" />
		<meta property="og:image" content="{{urlAbsolutaFoto}}" />
		<meta property="og:type" content="article" />
		<meta property="og:site_name" content="hgrupoeditorial.com" />
		<!--meta property="fb:admins" content="USER_ID1,USER_ID2"/-->

		<meta name="twitter:card" content="summary">
		<meta name="twitter:site" content="@heraldodetoluca">
		<meta name="twitter:title" content="H Grupo Editorial">
		<meta name="twitter:description" content="H Grupo Editorial, Estado de Toluca, Toluca, Valle de México, Morelos, Querétaro">
		<meta name="twitter:creator" content="@richpolis">
		<meta name="twitter:image:src" content="{{urlAbsolutaFoto}}">
		<meta name="twitter:domain" content="{{url('homepage')}}">
		<meta name="twitter:app:name:iphone" content="">
