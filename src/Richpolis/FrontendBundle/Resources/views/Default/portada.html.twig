	{% endblock %}

<link rel="stylesheet" href="{{asset('css/portada.css')}}"/>
{% endblock %}

{% block body %}
<div class="container fondo-azul" style="width: 100%;background: #0b59a2;">
        <header class="header">
                <figure id="logo">
                    <img src="{{ asset('images/hgrupoeditoriallogoportada.png') }}" alt="H GRUPO EDITORIAL"/>
                </figure>
        </header>
        <section class="principal">
            <p>Seleccione el portal que desea visitar:</p>
            <nav class="navegador">
                <ul class="menu">
                    <li>
                        <a href="{{path('homepage')}}">Estado de México</a>
                    </li>
                    <li>
                        <a href="{{path('homepage')}}">Toluca</a>
                    </li>
                    <li>
                        <a href="{{path('homepage')}}">Valle de México</a>
                    </li>
                    <li>
                        <a href="{{path('homepage')}}">Morelos</a>
                    </li>
                    <li>
                        <a href="{{path('homepage')}}">Querétaro</a>
                    </li>
                </ul>
            </nav>
       </section>        
</div>
<footer>
        <div class="container">
            <div class="contenidos">
                <figure class="logo">
                    <img src="{{asset('images/logofooter.png')}}" alt="" class="imagen-logo">
                </figure>
                <div class="contenido">
                    {{ render(controller('FrontendBundle:Default:piePagina')) }}
                </div>
                <div class="redes-sociales">
                    <a href="https://twitter.com/HeraldoEdomex/" target="_blank"><span class="twitter ico_twitter"></span></a>
                    <a href="https://www.facebook.com/HeraldoEdomex" target="_blank"><span class="facebook ico_facebook"></span></a>
                    <a href="https://www.youtube.com/user/HGrupoEditorial" target="_blank"><span class="youtube ico_youtube"></span></a>
                    <a href="https://www.flickr.com/photos/77889457@N06/" target="_blank"><span class="flickr ico_flickr"></span></a>
                </div>
            </div>
        </div>    
</footer>    
