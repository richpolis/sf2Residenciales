{% if pageCount > 1 %}
<div class="pgn">
    {% if previous is defined %}
      <a href="{{ path(route, query|merge({(pageParameterName): previous})) }}">
          <span class="prv ico_paginador_izq"></span>
      </a>
    {% else %}
       <span class="prv ico_paginador_izq"></span>
    {% endif %}
    
    <div class="pgs">
    {% for page in pagesInRange %}
        {% if page != current %}
            <a href="{{ path(route, query|merge({(pageParameterName): page})) }}"  class="page">{{ page }}</a>
        {% else %}
            <span class="cur">{{ page }}</span>
        {% endif %}
    {% endfor %}
    </div>
    
    {% if next is defined %}
        <a href="{{ path(route, query|merge({(pageParameterName): next})) }}">
            <span class="nxt ico_paginador_der"></span>
        </a>
    {% else %}
        <span class="nxt ico_paginador_der"></span>
    {% endif %}
    </ul>
</div>
{% endif %}
