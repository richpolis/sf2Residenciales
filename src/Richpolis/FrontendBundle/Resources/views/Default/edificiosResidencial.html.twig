{% if is_granted('ROLE_ADMIN') %}
<form class="navbar-form" role="search" action="#search" method="post">
    <div class="form-group">
        <select name="seleccionar" onchange="cambiarEdificio()" class="form-control cambiar-edificio" style="color: #000000;">
            {% for sel in edificios %}
                {% if sel.id == edificioActual.id %}
                <option value="{{edificioActual.id}}" selected>{{edificioActual}}</option>
                {% else %}
                <option value="{{sel.id}}" data-url="{{path('cambiar_edificio')}}?edificio={{sel.id}}">{{sel}}</option>
                {% endif %}    
            {% else %}
                <option value="0" selected>Crear edificios</option>
            {% endfor %}    
        </select>
    </div>
</form>
{% else %}
 <form class="navbar-form" role="search" action="#search" method="post">
    <div class="form-group">
        <input id="buscarItem" name="buscarItem" type="text" class="form-control" placeholder="{{edificioActual}}" style="color: #000000;" readonly="readonly"> 
    </div>
</form>   
{% endif %}    